{
    "name": "islam/itoastsh",
    "description": "Flexible and animated toast notification system for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "IslamAlsayed",
            "email": "eslamalsayed8133@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Islam\\Itoast\\": "src/"
        },
        "files": [
            "src/Helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Islam\\Itoast\\IToastServiceProvider"
            ],
            "aliases": {
                "IToast": "Islam\\Itoast\\Facades\\IToastFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
